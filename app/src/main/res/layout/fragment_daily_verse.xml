<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/dailyVerseScrollView"

             tools:context="com.coconuts.ariel.thelovedareproject.controller.mainMenu.DailyVerseFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:src="@drawable/verse_wallpaper_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/theme"
        >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <TextView
                style="@style/TextViewStyleMainMenu"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VOTD_text"
                />

            <Button
                android:id="@+id/share_button"
                android:text="@string/share"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSizeSmall"
                android:padding="0dp"/>

        </LinearLayout>




    </FrameLayout>


</ScrollView>

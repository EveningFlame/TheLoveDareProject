<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="com.coconuts.ariel.thelovedareproject.controller.mainMenu.AboutDialogFragment">

    <!-- android:background="@color/colorAccentBrightGold" -->

    <TextView
        android:text="@string/reflect_intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SimpleText"
        android:textColor="@color/fireBrick"
        android:textAlignment="center"/>


    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/reflection_edit_text_view"
        android:hint="@string/hint_reflection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_around"
        style="@style/SimpleText"
        android:textColor="@color/colorAccentBrightGold"
        android:background="@drawable/shamrock_round_image"
        />

</LinearLayout>

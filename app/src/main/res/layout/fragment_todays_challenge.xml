<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.coconuts.ariel.thelovedareproject.controller.dailyChallenges.TodaysChallengeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/SimpleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/day_text"
                />

            <TextView
                style="@style/SimpleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_text"
                />

            <TextView
                style="@style/SimpleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chapter_verse_text"
                />

            <TextView
                style="@style/SimpleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/todays_d_text"
                android:text="Today's Dare:"/>

            <TextView
                style="@style/SimpleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dare_text"
                />

            <Button
                android:id="@+id/reflect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reflect_text"
                android:layout_gravity="bottom|right"
                style="@style/TextSizeSmall"
                android:padding="@dimen/padding_around"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </ScrollView>





</LinearLayout>
